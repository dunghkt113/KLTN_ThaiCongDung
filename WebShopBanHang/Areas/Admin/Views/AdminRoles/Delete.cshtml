@model WebShopBanHang.Models.Role

@{
    ViewData["Title"] = "Xóa tài khoản đăng nhập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Trang Chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete">Xóa tài khoản truy cập</a>
        </nav>
    </div>
</div>

<div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xóa tài khoản đăng nhập</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td class="text-dark font-weight-semibold">@Model.RoleId</td>
                        </tr>
                        <tr>
                            <td>Tên quyền truy cập:</td>
                            <td>@Model.RoleName</td>
                        </tr>
                        <tr>
                            <td>Mô Tả</td>
                            <td>@Model.Description</td>
                        </tr>

                    </tbody>
                </table>
            </div>
            
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a class="btn btn-success btn-tone m-r-5" asp-action="Index">Trở Lại</a>
    </form>
</div>


