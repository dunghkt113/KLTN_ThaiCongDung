@model WebShopBanHang.Models.Account
@{
    ViewData["Title"] = "Tạo mới tài khoản quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Tạo mới quyền truy cập</span>
        </nav>
    </div>
</div>
<form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RoleId" />
        <div class="form-group">
            <div class="form-row">
                
                <div class="col-sm-6">
                    <label for="" >Tên đăng nhập</label>
                    <input type="text" class="form-control col-md-8" asp-for="FullName" placeholder="Tên đăng nhập">
                </div>
                <div class="col-sm-6">
                    <label for="" >Email</label>
                    <input type="email" class="form-control col-md-8" asp-for="Email" placeholder="Email">
                </div>
            </div>
            <div class="form-row">
                <div class="col-sm-6">
                    <label >Số điện thoại</label>
                    <input type="text" class="form-control col-md-8" asp-for="Phone" placeholder="Số điện thoại">
                </div>
                <div class="col-sm-6">
                    <label>Mật khẩu</label>
                    <input type="text" class="form-control col-md-8" asp-for="Password" placeholder="Mật khẩu">
                </div>

            </div>
            <div class="form-row">
                <div class="col-sm-6">
                    <label >Quyền truy cập</label>
                    <select class="form-control col-md-8" asp-for="RoleId" asp-items="ViewBag.QuyenTruyCap">
                        <option value="0" disabled selected> Quyền truy cập</option>
                    </select>
                </div>

            </div>
            <div class="form-group col-md-6">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary">Tạo tài khoản mới</button>
                </div>
            </div>

        </div>
    </form>
